<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="addColumn-size-in-table-file_upload" author="songiang">
        <addColumn tableName="file_upload">
            <column name="size" type="INTEGER"/>
        </addColumn>
    </changeSet>

    <changeSet id="updateColumn-size-0" author="songiang">
        <sql>UPDATE file_upload
             SET size = 0
             where size is null</sql>
    </changeSet>

    <changeSet id="updateColumn-success" author="songiang">
        <sql>UPDATE file_upload
             SET success = false
             where success is null</sql>
    </changeSet>

</databaseChangeLog>
